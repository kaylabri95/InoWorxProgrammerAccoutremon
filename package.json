{
  "name": "InoWorx",
  "version": "1.0.0",
  "description": "A Revolutionary and Intuitive Approach to Programming",
  "main": "index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish --dry run"
  },
  "author": "KB",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.5",
    "@electron-forge/maker-deb": "^6.0.5",
    "@electron-forge/maker-rpm": "^6.0.5",
    "@electron-forge/maker-snap": "^6.0.5",
    "@electron-forge/maker-zip": "^6.0.5",
    "electron": "^23.0.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./assets/icon"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-zip"
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "options": {
              "icon": "./assets/icon.png"
            }
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {
            "homepage": "cardinalkinetic.com"
          }
        },
        {
          "name": "@electron-forge/maker-snap",
          "config": {
            "version": "1.0.0",
            "features": {
              "audio": false,
              "mpris": "com.InoWorx.mpris",
              "webgl": true
            },
            "summary": "The InoWorx Programmer is a Revolutionary and Intuitive Approach to Programming"
          }
        }
      ]
    }
  },
  "dependencies": {
    "npm": "^9.4.2"
  }
}
